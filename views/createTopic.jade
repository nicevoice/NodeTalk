extends layout

prepend head
  title #{t("word.createTopic")} | #{t('app.name')}

block main
  header= t('word.createTopic')
  form.form-horizontal(method='post', role='form')
    .form-group
      .col-sm-3
        select#node.form-control(name='node', value=nodevalue)
          for node in nodes
            option(value=node.title)= node.name
      .col-sm-9
        input#title.form-control(type='text', name='title', required, value=title)
    .form-group.contentarea
      textarea#contetn.form-control(name='content', rows='15', required)= content
    .form-group
      .col-sm-offset-3
        button.btn.btn-lg.btn-primary(type='submit')= t('word.createTopic')
